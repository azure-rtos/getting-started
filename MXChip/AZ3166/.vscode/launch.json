{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "MXCHIP: Local OpenOCD",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "device": "STM32F412RG",
            "runToMain": true,
            "executable": "${workspaceFolder}/build/app/mxchip_azure_iot.elf",
            "svdFile": "${workspaceFolder}/.vscode/STM32F412.svd",
            "cwd": "${workspaceRoot}",
            "configFiles": [
                "board/stm32f4discovery.cfg"
            ]
        },
        {
            "name": "MXCHIP: Container OpenOCD",
            "type": "cortex-debug",
            "executable": "${workspaceFolder}/build/app/mxchip_azure_iot.elf",
            "request": "launch",
            "servertype": "external",
            "gdbTarget": "${input:openOCD.host}",
            "runToMain": true,
            "svdFile": "${workspaceFolder}/.vscode/STM32F412.svd",
        }
    ],
    "inputs": [
        {
            "id": "openOCD.host",
            "type": "promptString",
            "default": "localhost:3333",
            "description": "Open OCD Debug hostname with port"
        }
    ]
}