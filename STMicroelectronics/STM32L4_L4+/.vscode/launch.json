{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "B-L475E-IOT01",
            "type": "gdb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "target": "./build/app/stm32l475_azure_iot.elf",
            "gdbpath": "arm-none-eabi-gdb",
            "autorun": [
                "target extended-remote ${input:openOCD.host}",
            ]
        },
        {
            "name": "B-L4S5I-IOT01",
            "type": "gdb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "target": "./build/app/stm32l4S5_azure_iot.elf",
            "gdbpath": "arm-none-eabi-gdb",
            "autorun": [
                "target extended-remote ${input:openOCD.host}",
            ]
        },        
    ],
    "inputs": [
        {
            "id": "openOCD.host",
            "type": "promptString",
            "default": "localhost:3333",
            "description": "Open OCD Debug hostname with port"
        }
    ]
}