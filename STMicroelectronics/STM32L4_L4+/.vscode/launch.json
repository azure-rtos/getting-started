{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "interface": "swd",
            "device": "STM32L4x",
            "cwd": "${workspaceRoot}",
            "rtos": "auto",
            "executable": "./build/app/stm32l475_azure_iot.elf",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32l4x.cfg"
            ],
            "openOCDLaunchCommands": [
                "telnet_port 1336"
            ],
            "svdFile": "./.vscode/STM32L4x5.svd",
            "swoConfig": {
                "enabled": true,
                "cpuFrequency": 80000000,
                "swoFrequency": 2000000,
                "source": "probe"
            },
        },

        // https://www.justinmklam.com/posts/2017/10/vscode-debugger-setup/
        {
            "name": "GDB Debug Windows",
            "type": "gdb",
            "request": "launch",
            "target": "./build/app/stm32l475_azure_iot.elf",
            "cwd": "${workspaceRoot}",
            "gdbpath" : "C:/Program Files (x86)/GNU Tools Arm Embedded/9 2019-q4-major/bin/arm-none-eabi-gdb.exe",
            "autorun": [
                "target extended-remote 10.0.0.131:3333",
            ]
        },
        {
            "name": "GDB Debug Remote",
            "type": "gdb",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "target": "./build/app/stm32l475_azure_iot.elf",
            "gdbpath" : "arm-none-eabi-gdb",
            "autorun": [
                "target extended-remote winterbug.com:3333",
            ]
        }
    ]
}